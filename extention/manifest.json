{
  "manifest_version": 3,
  "name": "Prompter",
  "version": "1.0",
  "description": "Turns simple ideas into expert prompts instantly.",

  "permissions": [
    "storage"
  ],

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}