{
  "manifest_version": 3,
  "name": "Prompter",
  "version": "0.0.1",
  "description": "Enhances AI prompts on chat platforms",
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://huggingface.co/*",
    "https://*.huggingface.co/*",
    "https://cdn.jsdelivr.net/*",
    "*://chatgpt.com/*",
    "*://*.openai.com/*",
    "*://claude.ai/*",
    "*://*.x.com/*",
    "*://*.grok.com/*",
    "*://*.x.ai/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://chatgpt.com/*",
        "*://*.openai.com/*",
        "*://claude.ai/*",
        "*://*.x.com/*",
        "*://*.grok.com/*",
        "*://*.x.ai/*"
      ],
      "js": ["transformers.min.js", "content.js"],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_idle"
    }
  ]
}